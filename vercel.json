{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "options": {
        "installCommand": "npm install --prefix client --legacy-peer-deps",
        "buildCommand": "npm run build --prefix client"
      }
    },
    {
      "src": "server/package.json",
      "use": "@vercel/node",
      "options": {
        "installCommand": "npm install --prefix server",
        "buildCommand": "npm run vercel-build --prefix server"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ]
}